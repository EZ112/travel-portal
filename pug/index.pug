doctype
html(lang='en')
    head
        include _head.pug
        link(rel="stylesheet", href="assets/css/index.css")
    body
        |<% String heading = "Where are you going ?";%>
        |<% String tagline = "Ticket anywhre only at TravelProtal";%>
        |<% String tagline2 = "Booking is faster, easier and cheaper";%>
        include _general.pug
        .container
            - for(let i = 0; i < 4; i++)
                .section
                    if i == 0
                        |<%@ include file="_menutag.jsp"%>
                    else if i == 1
                        |<%@ include file="_homeheader.jsp"%>
                    else if i == 2
                            form(action="search.jsp" method="POST")
                                .formItem.heading-2 <%= heading%>
                                for k in searchForm
                                    .formItem
                                        if k[0] == 'ddl'
                                            +dropdown(k[1], k[2], k[3])
                                        else 
                                            +input(k[1], k[2], k[3])
                                .formItem
                                    input(type="submit", value="Search Flight")
                    else
                        |<%@ include file="_footerol.jsp"%>
    script(src="assets/javascript/index.js")