doctype
html(lang='en')
    head
        include ../_head.pug
        link(rel='stylesheet', href='../assets/css/insertuser.css')
    body
        |<% String heading = "Update User";%>
        |<% String tagline = "Update active user";%>
        include ../_general.pug
        .container
            - for(let i = 0; i < 4; i++)
                .section
                    if i == 0
                        |<%@ include file="../_menuadmin.jsp"%>
                    else if i == 1
                          |<%@ include file="../_header.jsp"%>
                    else if i == 2
                            form(action='')
                                for k in updtUserForm
                                    .formItem
                                        if k[0] == 'in'
                                            +input(k[1], k[2], k[3], k[4], k[5])
                                        else if k[0]== 'inGender'
                                            +inputRadio(k[1], k[2], k[3], k[4])
                                        else
                                            +inputNoLabel(k[1], k[2], k[3], k[4])   

                    else
                        |<%@ include file="../_footerol.jsp"%>
    script(src='assets/javascript/index.js')